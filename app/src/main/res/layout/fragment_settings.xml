<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Fragments.SettingsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F6F61C">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="My Smart Home"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:background="#F6F61C"
                android:contentDescription="gg"
                android:outlineAmbientShadowColor="@color/black"
                android:src="@android:drawable/ic_menu_edit" />

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1F3F4"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:text="User Settings"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="49dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:tint="#F6F61C"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_user"></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"

                    android:text="Trisha"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="273dp"
                    android:layout_height="35dp"
                    android:paddingLeft="20dp"
                    android:text="agabatrisha@gmail.com"
                    android:textSize="20sp"></TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F1F3F4"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Home Settings"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="52dp"
                    android:layout_height="49dp"
                    android:layout_marginLeft="10dp"
                    android:tint="#F6F61C"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_account"></ImageView>

                <TextView
                    android:layout_width="182dp"
                    android:layout_height="50dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Accounts &amp; Hubs"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="49dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:tint="#F6F61C"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_clients"></ImageView>

                    <TextView
                        android:layout_width="182dp"
                        android:layout_height="50dp"
                        android:paddingLeft="10dp"
                        android:text="Clients"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="49dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:tint="#F6F61C"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_location"></ImageView>

                    <TextView
                        android:layout_width="182dp"
                        android:layout_height="50dp"
                        android:tint="#F6F61C"
                        android:paddingLeft="10dp"
                        android:text="Locations"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F1F3F4"
                    android:paddingLeft="20dp"
                    android:paddingBottom="10dp"
                    android:text="Voice"
                    android:paddingTop="10dp"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="52dp"
                            android:layout_height="49dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:paddingTop="10dp"
                            android:tint="#F6F61C"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_account"></ImageView>

                        <TextView
                            android:layout_width="182dp"
                            android:layout_height="50dp"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:tint="#F6F61C"
                            android:text="Voice Assistants"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F1F3F4"
                        android:paddingLeft="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="App Permissions"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="52dp"
                                android:layout_height="49dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_settings_activity"></ImageView>

                            <TextView
                                android:layout_width="335dp"
                                android:layout_height="50dp"
                                android:paddingLeft="10dp"
                                android:paddingTop="10dp"
                                android:text="Notifications &amp; Permissions"
                                android:textSize="20sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </LinearLayout>


    </LinearLayout>




            </LinearLayout>
    </LinearLayout>
</LinearLayout>